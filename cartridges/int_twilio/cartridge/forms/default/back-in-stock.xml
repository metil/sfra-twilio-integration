<?xml version="1.0" encoding="utf-8" ?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <group formid="backInStockSubscribe">
        <field
            formid="phone"
            label="label.profile.phone"
            type="string"
            regexp="^\+[1-9]{1,3}\s?\d{7,12}$"
            max-length="15"
            min-length="10"
            mandatory="true"
            missing-error="error.phone.missing"
            range-error="error.phone.range"
            value-error="error.phone.value"
        />
        <field
            formid="product"
            type="string"
            maxLength="20"
            minLength="10"
        />
    </group>
</form>
